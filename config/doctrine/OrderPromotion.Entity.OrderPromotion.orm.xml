<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Component\OrderPromotion\Entity\OrderPromotion" table="bookshop_order_promotion">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="position" type="integer" nullable="false"/>

        <many-to-one field="order" target-entity="App\Component\Order\Entity\Order" inversed-by="itemPromotions">
            <join-column name="order_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one field="promotion" target-entity="App\Component\Promotion\Entity\Promotion">
            <join-column name="promotion_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>

        <unique-constraints>
            <unique-constraint columns="order_id,promotion_id" name="uniq_order_promotion"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>
